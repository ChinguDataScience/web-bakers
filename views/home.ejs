<% include partials/header %>

<div class="page-title">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h2>Ideas for new projects</h2>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
      <div class="col-lg-6">
        <% ideas.forEach(function(idea) { %>
          <div class="idea-card">
            <h3><%= idea.title %></h3>
            <p><%= idea.blurb %></p>
            <p>&mdash;<%= idea.author %></p>
            <p><%= idea.dateSubmitted %></p>
          </div>
        <%  }) %>
      </div>
    </div>
</div>

<% include partials/footer %>